<h1>Eat-Da-Burger!</h1>


<div class="container">
 <div class = "row">
  <div class = "col-lg-6 col-md-6 col-sm-6 col-xs-6">
   <ul>
    {{#each burgers}}
     {{#unless this.devoured}}
      <li>
       <form action="/{{this.id}}?_method=PUT" method="POST">
        <div class="row">
         <div class="left col-lg-6 col-md-6 col-sm-6 col-xs-6">{{this.burger_name}}</div>
         <button class="col-lg-3 col-md-3 col-sm-3 col-xs-3" type="submit">Devour it!</button>
        </div>
       </form>
      </li>
     {{/unless}}
    {{/each}} 
   </ul>
  </div>

  <div class = "col-lg-6 col-md-6 col-sm-6 col-xs-6">
   <ul>
    {{#each burgers}}
     {{#if this.devoured}}
      <li>
       <div class="right">{{this.burger_name}}</div>
      </li>
     {{/if}}
    {{/each}}
   </ul>
  </div>
 </div>
 <div class = "row">
  <form action="/" method="POST">
   <textarea name="burger_name"></textarea>
   <button type="submit">Submit</button>
   <p>Enter a burger you want to eat Click the "Submit" button.
  </form>
 </div>
</div>